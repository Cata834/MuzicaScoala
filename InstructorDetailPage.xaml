<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuzicaScoala.InstructorDetailPage">

    <StackLayout Padding="20">
        <Label Text="Instructor Details" FontSize="24" HorizontalOptions="CenterAndExpand" />

        <Label Text="Name:" FontSize="18" />
        <Label x:Name="InstructorNameLabel" FontSize="18" />

        <Label Text="Email:" FontSize="18" />
        <Label x:Name="InstructorEmailLabel" FontSize="18" />

        <Label Text="Phone:" FontSize="18" />
        <Label x:Name="InstructorPhoneLabel" FontSize="18" />
    </StackLayout>

</ContentPage>
