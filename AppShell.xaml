<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MuzicaScoala.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MuzicaScoala"
    Shell.FlyoutBehavior="Disabled"
    Title="MuzicaScoala">

    <TabBar>
        <ShellContent
            Title="Courses"
            ContentTemplate="{DataTemplate local:CoursesPage}" />

        <ShellContent
            Title="Instructors"
            ContentTemplate="{DataTemplate local:InstructorsPage}" />

        <ShellContent
            Title="About Us"
            ContentTemplate="{DataTemplate local:AboutPage}" />
    </TabBar>

    <!-- Adăugăm o pagină separată pentru a adăuga un curs -->
    <ShellContent Title="Add Course" ContentTemplate="{DataTemplate local:AddCoursePage}" />
</Shell>
