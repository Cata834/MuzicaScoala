<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuzicaScoala.AboutPage"
             Title="About Our Music School">
    <VerticalStackLayout Spacing="10" Margin="10" HorizontalOptions="Center" VerticalOptions="Center">

        <!-- Logo -->
        <HorizontalStackLayout Spacing="10" >
            <Image Source="music_logo.png"
                   SemanticProperties.Description="Music School Logo"
                   HeightRequest="150"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Numele școlii și descrierea -->
        <Label FontSize="22" FontAttributes="Bold" Text="Harmony Music School" VerticalOptions="Start" />
        <Label Text="Welcome to Harmony Music School! We offer professional music courses for all ages."
               FontSize="16" />

        <!-- Descrierea aplicației -->
        <Label Text="This app helps you manage and schedule your music courses. You can view upcoming courses, register for classes, and stay in touch with our instructors."
               FontSize="14" />

        <!-- Descrierea școlii -->
        <Label Text="Founded in 2015, Harmony Music School is dedicated to providing high-quality music education to students of all levels."
               FontSize="14" />

        <!-- Contact -->
        <Label Text="For more information, you can contact us at:"
               FontSize="14" FontAttributes="Bold" />
        <Label Text="Email: contact@harmonyschool.com"
               FontSize="14" />
        <Label Text="Phone: +1 234 567 890"
               FontSize="14" />

        <!-- Politici -->
        <Label Text="Cancellation Policy: All courses can be cancelled with 24 hours notice."
               FontSize="14" />

        <!-- Feedback -->
        <Label Text="We would love to hear your feedback! Share your experience on our website or social media."
               FontSize="14" />

       

        <Button Text="View Courses"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="OnViewCoursesClicked" />

        <Button Text="View Instructors"
                FontSize="16"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand"
                Clicked="OnViewInstructorsClicked" />

    </VerticalStackLayout>
</ContentPage>
