<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuzicaScoala.InstructorPage"
             Title="Instructors">

    <Grid Padding="10">
        <!-- Lista de instructori -->
        <ListView x:Name="InstructorListView"
                  ItemTapped="OnInstructorTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                              Detail="{Binding CoursesDisplay}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Butonul de update -->
        <Button Text="Update"
                Clicked="OnUpdateInstructorClicked"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Padding="10"
                BackgroundColor="MediumPurple" />
        <!-- Poziționează butonul în colțul din dreapta sus -->
    </Grid>
</ContentPage>
