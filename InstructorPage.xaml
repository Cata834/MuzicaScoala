<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuzicaScoala.InstructorPage"
             Title="Instructors">

    <VerticalStackLayout Padding="10" Spacing="10">

        <Label Text="List of Instructors" FontSize="24" HorizontalOptions="Center" />

        <!-- ListView pentru afișarea instructorilor -->
        <ListView x:Name="InstructorListView"
                  ItemTapped="OnInstructorTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}"
                              Detail="{Binding CoursesDisplay}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Buton pentru a șterge instructorii fără cursuri -->
        <Button Text="Șterge Instructori Fără Cursuri"
                Clicked="OnDeleteInstructorsWithoutCoursesClicked"
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand" />

        <!-- Buton pentru a naviga la AddInstructorPage -->
        <Button Text="Add New Instructor" Clicked="OnAddInstructorClicked" />

    </VerticalStackLayout>
</ContentPage>
